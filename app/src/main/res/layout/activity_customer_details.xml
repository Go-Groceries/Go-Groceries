<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.CustomerDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customerDetailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_back"
        app:title="Customer Details" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/cName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName|textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/cPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:ems="10"
                android:hint="Phone No. (10 digits)"
                android:inputType="phone"
                android:maxLength="10"
                android:minHeight="48dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/cEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/cAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:ems="10"
                android:hint="Street/Locality/Area"
                android:inputType="textPostalAddress|textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/cCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Town/City"
                android:inputType="textPostalAddress|textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/cState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="State"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/cCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Country"
                android:inputType="textPostalAddress|textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/cPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Pincode"
                android:inputType="textPostalAddress|textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/cCurrentLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_gps"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="Use Current Location"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/placeOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Place Order"
                app:cornerRadius="50dp"
                app:strokeWidth="2dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>